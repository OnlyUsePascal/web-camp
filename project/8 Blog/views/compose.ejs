<%- include('partials/header'); %>


<h1>Compose</h1> 
<form action="/compose" method="post">
    <!-- <div class="mb-5" style="margin-bottom: 10px;"> -->
    <div class="form-group">
        <label class="form-label" for="postTitle">Title</label> 
        <input class="form-control" type="text" name="postTitle" autocomplete="off"> 
    </div>

    <div class="form-group">
        <label class="form-label" for="postContent">Content</label>
        <textarea class="form-control" name="postContent" autocomplete="off" rows="4"></textarea>
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" >Publish</button>
    </div>
</form>

<%- include('partials/footer'); %>